---
import Container from "./ui/Container.astro";
---

<section id="speakers">
  <Container>
    <h1 class="text-center text-4xl font-bold text-[#06202B] md:text-5xl mb-16">
      Keynote Speakers
    </h1>

    <div class="flex flex-wrap justify-center gap-6 z-20">
      <div class="bg-background border border-[#06202B] rounded-lg shadow-lg max-w-xs">
        <div class="p-6 space-y-4 flex flex-col items-center">
          <img class="rounded-md aspect-square object-contain" src="/images/speaker1.png" />
          <div class="text-center">
            <h3 class="text-lg font-semibold text-[#06202B]">Prof. Vladan Devedzic</h3>
            <p class="font-semibold text-[#077A7D]">University of Belgrade, Serbia</p>
          </div>
        </div>
      </div>

      <div class="bg-background border border-[#06202B] rounded-lg shadow-lg max-w-xs">
        <div class="p-6 space-y-4 flex flex-col items-center">
          <img class="rounded-md aspect-square object-cover object-top" src="/images/speaker2.jpg" />
          <div class="text-center">
            <h3 class="text-lg font-semibold text-[#06202B]">Prof. Ram Bilas Pachori</h3>
            <p class="font-semibold text-[#077A7D]">IIT Indore, India</p>
          </div>
        </div>
      </div>
    </div>

    <h1 class="text-center text-4xl font-bold text-[#06202B] md:text-5xl my-16">
      Invited Talks
    </h1>

    <div class="flex flex-wrap justify-center gap-6 z-20">
      <div class="bg-background border border-[#06202B] rounded-lg shadow-lg max-w-xs">
        <div class="p-6 space-y-4 flex flex-col items-center">
          <img class="rounded-md aspect-square object-contain" src="/images/speaker3.jpg" />
          <div class="text-center">
            <h3 class="text-lg font-semibold text-[#06202B]">Prof. Anand Nayyar</h3>
            <p class="font-semibold text-[#077A7D]">Duy Tan University, Vietnam</p>
          </div>
        </div>
      </div>

      <div class="bg-background border border-[#06202B] rounded-lg shadow-lg max-w-xs">
        <div class="p-6 space-y-4 flex flex-col items-center">
          <img class="rounded-md aspect-square object-contain" src="/images/speaker4.jpg" />
          <div class="text-center">
            <h3 class="text-lg font-semibold text-[#06202B]">Dr. Amelia Taylor</h3>
            <p class="font-semibold text-[#077A7D]">Malawi University, Malawi</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Previous Speakers Section Toggle -->
    <div class="text-center mt-12">
      <button
        onclick="document.getElementById('previousSpeakers').classList.toggle('hidden')"
        class="bg-[#077A7D] text-white px-6 py-2 rounded-md shadow hover:bg-[#055f61] transition"
      >
        Previous Speakers and Talks
      </button>
    </div>

    <div id="previousSpeakers" class="hidden mt-10">
      <h2 class="text-3xl font-bold text-[#06202B] text-center mb-8">Previous Speakers</h2>
      <div class="flex flex-wrap justify-center gap-6 z-20">
        <!-- Duplicated Current Speakers -->

        <!-- Speaker 1 -->
        <div class="bg-background border border-[#06202B] rounded-lg shadow-lg max-w-xs">
          <div class="p-6 space-y-4 flex flex-col items-center">
            <img class="rounded-md aspect-square object-contain" src="/images/speaker1.png" />
            <div class="text-center">
              <h3 class="text-lg font-semibold text-[#06202B]">Prof. Vladan Devedzic</h3>
              <p class="font-semibold text-[#077A7D]">University of Belgrade, Serbia</p>
            </div>
          </div>
        </div>

        <!-- Speaker 2 -->
        <div class="bg-background border border-[#06202B] rounded-lg shadow-lg max-w-xs">
          <div class="p-6 space-y-4 flex flex-col items-center">
            <img class="rounded-md aspect-square object-cover object-top" src="/images/speaker2.jpg" />
            <div class="text-center">
              <h3 class="text-lg font-semibold text-[#06202B]">Prof. Ram Bilas Pachori</h3>
              <p class="font-semibold text-[#077A7D]">IIT Indore, India</p>
            </div>
          </div>
        </div>

        <!-- Speaker 3 -->
        <div class="bg-background border border-[#06202B] rounded-lg shadow-lg max-w-xs">
          <div class="p-6 space-y-4 flex flex-col items-center">
            <img class="rounded-md aspect-square object-contain" src="/images/speaker3.jpg" />
            <div class="text-center">
              <h3 class="text-lg font-semibold text-[#06202B]">Prof. Anand Nayyar</h3>
              <p class="font-semibold text-[#077A7D]">Duy Tan University, Vietnam</p>
            </div>
          </div>
        </div>

        <!-- Speaker 4 -->
        <div class="bg-background border border-[#06202B] rounded-lg shadow-lg max-w-xs">
          <div class="p-6 space-y-4 flex flex-col items-center">
            <img class="rounded-md aspect-square object-contain" src="/images/speaker4.jpg" />
            <div class="text-center">
              <h3 class="text-lg font-semibold text-[#06202B]">Dr. Amelia Taylor</h3>
              <p class="font-semibold text-[#077A7D]">Malawi University, Malawi</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </Container>
</section>
