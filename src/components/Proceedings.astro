---
import Container from "./ui/Container.astro";
---

<section id="proceedings">
  <Container>
    <!-- Title -->
    <h1 class="text-center text-4xl font-bold text-gray-800 dark:text-white md:text-5xl mb-10">
      Past Conference
    </h1>

    <!-- Springer Link -->
    <p class="text-center text-sky-500 italic text-lg mb-8">
      https://link.springer.com/conference/icon-ai-smt
    </p>

    <!-- Conference Info Section -->
    <div class="flex flex-col md:flex-row justify-center items-start gap-10">
      <!-- Book Cover -->
      <div class="w-full md:w-1/3 flex justify-center">
        <img
          src="/conference-book-cover.png"
          alt="ICON-AI-SMT'25 Proceedings Cover"
          class="max-w-xs rounded-lg shadow-md"
        />
      </div>

      <!-- Details -->
      <div class="w-full md:w-2/3">
        <h2 class="text-xl font-bold text-black dark:text-white mb-2">ICON-AI-SMT'25</h2>
        <p class="text-base text-gray-700 dark:text-gray-300 leading-relaxed">
          <strong>Communications in Computer and Information Science (CCIS)</strong> Volume 1825<br/>
          <strong>Intelligent Computing and Smart Technologies</strong><br/>
          First International Conference, ICON-AI-SMT 2025, Gujarat, India, December 15–16, 2025
        </p>

        <h3 class="mt-4 font-semibold text-gray-800 dark:text-white">Proceedings Editors</h3>
        <p class="text-sm text-gray-600 dark:text-gray-400">
          Dr. Example Editor, Dr. Second Editor, Dr. Third Editor
        </p>

        <a
          href="https://link.springer.com/book/10.1007/978-3-030-xxxx-x"
          target="_blank"
          rel="noopener noreferrer"
          class="text-sky-500 italic mt-2 inline-block"
        >
          https://link.springer.com/book/10.1007/978-3-030-xxxx-x
        </a>
      </div>
    </div>

