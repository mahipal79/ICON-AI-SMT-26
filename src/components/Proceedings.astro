---
import Container from "./ui/Container.astro";
import Link from "./ui/Link.astro";
---

<section id="proceedings">
  <Container>
    <h1 class="text-center text-4xl font-bold text-gray-800 dark:text-white md:text-5xl mb-10">
      Conference Proceedings
    </h1>

    <div class="flex flex-col md:flex-row justify-center gap-6">
      <!-- Box 1 -->
      <a
        href="https://example.com/proceedings.pdf"
        target="_blank"
        rel="noopener noreferrer"
        class="flex-1 text-center bg-blue-100 text-blue-900 font-semibold text-lg px-6 py-5 rounded-lg shadow-md hover:bg-blue-200 transition"
      >
        Conference Proceedings
      </a>

      <!-- Box 2 -->
      <a
        href="https://example.com/conference-report.pdf"
        target="_blank"
        rel="noopener noreferrer"
        class="flex-1 text-center bg-blue-100 text-blue-900 font-semibold text-lg px-6 py-5 rounded-lg shadow-md hover:bg-blue-200 transition"
      >
        Conference Report
      </a>
    </div>

    <p class="text-center text-sm text-gray-500 dark:text-gray-400 mt-6">
      *Links will be updated once finalized.
    </p>
  </Container>
</section>
